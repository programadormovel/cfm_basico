<cfset nome= "José">

<cfif nome equal "Maria">
    Seu nome é Maria.
<cfelse>
    Seu nome não é Maria.
</cfif>
    
<cfif nome eq "Maria">
    Seu nome é Maria.
</cfif>
    
<cfif nome is "Maria">
    Seu nome é Maria.
</cfif>
    
<!--- Comparação de igualdade
      equal, eq ou is
--->

